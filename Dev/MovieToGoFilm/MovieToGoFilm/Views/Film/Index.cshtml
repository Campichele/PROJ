@model IEnumerable<MovieToGoFilm.Models.Film>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDeSortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDistributeurNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdLangueNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNationaliteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSousTitreNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDeSortie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDistributeurNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLangueNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNationaliteNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSousTitreNavigation.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFilm">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFilm">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFilm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
