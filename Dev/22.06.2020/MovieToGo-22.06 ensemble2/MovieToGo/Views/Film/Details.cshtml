@model MovieToGo.Models.Film
@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div class="row">

    <div class="col-4">
        <img src="@ViewBag.pathFile" alt="@Html.DisplayFor(model => model.Nom)" width="100%">
    </div>

    <div class="col-8">
        <h4>Film</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateDeSortie)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateDeSortie)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duree)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duree)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prix)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prix)
            </dd>
        </dl>
    </div>
</div>
    <form asp-area="" asp-controller="Commentaire" asp-action="Index" method="get">
        <input type="hidden" value="@ViewBag.IdFilm" name="searchID">
        <input class="btn btn-primary" type="submit" value="Commentaire" />
    </form>
    <form asp-area="" asp-controller="Notes" asp-action="Create" method="get">
        <input type="hidden" value="@ViewBag.IdFilm" name="searchID">
        <input class="btn btn-primary" type="submit" value="Note" />
    </form>

    <div>
        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.IdFilm">Edit</a>
        }
        <a asp-action="Index">Back to List</a>
    </div>
