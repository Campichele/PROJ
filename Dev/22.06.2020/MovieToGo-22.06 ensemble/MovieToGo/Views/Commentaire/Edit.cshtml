@model MovieToGo.Models.Commentaire

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Commentaire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCommentaire" />
            <div class="form-group">
                <input asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser" hidden></input>
            </div>
            <div class="form-group">
                <input asp-for="IdFilm" class="form-control" asp-items="ViewBag.IdFilm" hidden></input>
            </div>
            <div class="form-group">
                <input asp-for="Commentaire1" class="form-control" asp-items="ViewBag.Commentaire1" disabled />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Statut" /> @Html.DisplayNameFor(model => model.Statut)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-area="" asp-controller="Commentaire" asp-action="ListComments" method="get">
        <input class="btn btn-primary" type="submit" value="Back" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
