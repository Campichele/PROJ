@model IEnumerable<MovieToGo.Models.Commentaire>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Commentaires</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Commentaire
            </th>
            <th>
                Statut
            </th>
            <th>
                Film
            </th>
            <th>
                User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Commentaire1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdFilmNavigation.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUserNavigation.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCommentaire">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCommentaire">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>